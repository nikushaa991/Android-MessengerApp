<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/chat_padding"
    android:paddingTop="@dimen/chat_padding"
    android:paddingRight="@dimen/chat_padding">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/received_chat_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_left"
            android:padding="@dimen/chat_padding"
            android:textColor="@color/chat_dark_blue"
            tools:text="mishvelet gtxovt" />
    </LinearLayout>

    <TextView
        android:id="@+id/received_chat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/chat_padding"
        tools:text="12:10" />


</LinearLayout>