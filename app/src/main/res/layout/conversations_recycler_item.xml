<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/login_margin_big"
    android:layout_marginLeft="@dimen/login_margin_big"
    android:layout_marginTop="@dimen/login_margin_big"
    android:layout_marginEnd="@dimen/login_margin_big"
    android:layout_marginRight="@dimen/login_margin_big">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/login_icon"
        android:layout_width="@dimen/conversations_icon_size"
        android:layout_height="@dimen/conversations_icon_size"
        android:contentDescription="@string/ellipses"
        android:scaleType="fitXY"
        app:shapeAppearanceOverlay="@style/Circle"
        app:srcCompat="@drawable/avatar_image_placeholder" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/login_margin_small"
        android:layout_marginRight="@dimen/login_margin_small"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/search_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/login_margin_small"
            android:text="@string/ellipses"
            android:textColor="@color/black"
            android:textSize="@dimen/conversation_name_size" />

        <TextView
            android:id="@+id/search_prof"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="2"
            android:maxLines="2"
            android:text="@string/ellipses" />
    </LinearLayout>

    <TextView
        android:id="@+id/conversation_time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/ellipses" />
</LinearLayout>