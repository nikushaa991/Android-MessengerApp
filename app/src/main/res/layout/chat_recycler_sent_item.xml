<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/chat_padding"
    android:paddingTop="@dimen/chat_padding"
    android:paddingRight="@dimen/chat_padding">

    <TextView
        android:id="@+id/sent_chat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/chat_padding"
        tools:text="12:10" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sent_chat_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_right"
            android:padding="@dimen/chat_padding"
            android:textColor="@color/white"
            tools:text="mishvelet gtxovt" />
    </LinearLayout>

</LinearLayout>