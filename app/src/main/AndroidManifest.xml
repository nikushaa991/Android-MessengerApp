<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ge.nnasaridze.messengerapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MessengerApp">
        <activity android:name=".scenes.chat.presentation.ChatActivity" />
        <activity android:name=".scenes.search.presentation.SearchActivity" />
        <activity android:name=".scenes.menu.presentation.MenuActivity" />
        <activity android:name=".scenes.signup.presentation.SignupActivity" />
        <activity android:name=".scenes.login.presentation.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>